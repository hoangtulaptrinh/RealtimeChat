@model RealtimeChat.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Create";
}

<section class="hero is-light">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Register
            </h1>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        @using (Html.BeginForm())
        {
            <div class="field">
                @Html.LabelFor(m => m.UserName, new { @class = "label" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "input" })
                <p class="help">@Html.ValidationMessageFor(m => m.UserName)</p>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.UserPassword, new { @class = "label" })
                @Html.PasswordFor(m => m.UserPassword, new { @class = "input" })
                <p class="help">@Html.ValidationMessageFor(m => m.UserPassword)</p>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.PasswordConfirmation, new { @class = "label" })
                @Html.PasswordFor(m => m.PasswordConfirmation, new { @class = "input" })
                <p class="help">@Html.ValidationMessageFor(m => m.PasswordConfirmation)</p>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.Email, new { @class = "label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "input" })
                <p class="help">@Html.ValidationMessageFor(m => m.Email)</p>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.ShowName, new { @class = "label" })
                @Html.TextBoxFor(m => m.ShowName, new { @class = "input" })
                <p class="help">@Html.ValidationMessageFor(m => m.ShowName)</p>
            </div>
            <div class="field">
                <button class="button is-primary">Submit</button>
            </div>
        }
    </div>
</section>